<% headers = ['', 'RMA ID', 'Device ID', 'Customer Name', 'Date Opened', 'Status', 'Assigned To'] %>

<%= tabs_start("rmaqueue")%>
<%= tabitem("rmaqueue", 0, "Open RMA Queue", true) %>

<div class="Half">
	<%= line_chart [
		{name: Date.today.years_ago(2).year, data: Rma.group_by_day_of_week(:created_at, format: "%a", range: Date.today.years_ago(2).all_week).count},
		{name: Date.today.years_ago(1).year, data: Rma.group_by_day_of_week(:created_at, format: "%a", range: Date.today.years_ago(1).all_week).count},
		{name: Date.today.year, data: Rma.group_by_day_of_week(:created_at, format: "%a", range: Date.today.all_week).count},
		], discrete: true, height: "100px", library: {title: "# of RMAs Opened",
														backgroundColor: "#D2DEF4",
														axisTitlesPosition: 'none',
														chartArea: {left: 40, top: 10, width: '75%'}
														} %>
	<div class="List">
		<span class="Count"><%= @openrmas.count %></span>
		<span class="Tablename">Open rmas</span>
		<div class="ListContents">
			<table class="ListTable">
				<thead>
					<tr>
						<% headers.each do |h| %>
						<th class="ListHeader"><%= link_to h, sort: h %></th>
						<% end %>
					</tr>
				</thead>
				<tbody>
					<%= render @openrmas %>
				</tbody>
			</table>
		</div>
	</div>
</div>

