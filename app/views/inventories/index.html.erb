<%= tabs_start('inventory') %>
<%= tabitem('inventory', 0, "Hardware", true) %>
	<% headers = ['Serial Number', 'Type', 'Model', 'Location', 'Date First Tracked', 'Last Updated', 'Updated By'] %>
	<div class="List">
		<span class="Count"><%= @hardwares.count %></span>
		<span class="Tablename">Hardware</span>
		<div class="ListContents">
			<table class="ListTable">
				<thead>
					<tr>
						<% headers.each do |h| %>
						<th class="ListHeader"><%= link_to h, sort: h %></th>
						<% end %>
					</tr>
				</thead>
				<tbody>
					<%= render @hardwares %>
				</tbody>
			</table>
		</div>
	</div>
<%= tabitem_end %>

<%= tabitem('inventory', 1, "Parts")%>
	<% headers = ['Status', 'Part #', 'Rack #', 'Description', 'Inv Level', 'ReOrd Level', 'Warehouse', 'Rpr Depot', 'Total', 'Last Updated', 'Updated By'] %>
	<div class="List">
		<span class="Count"><%= @parts.count %></span>
		<span class="Tablename">Device Event Log</span>
		<div class="ListContents">
			<table class="ListTable">
				<thead>
					<tr>
						<% headers.each do |h| %>
						<th class="ListHeader"><%= link_to h, sort: h %></th>
						<% end %>
					</tr>
				</thead>
				<tbody>
					<%= render @parts %>
				</tbody>
			</table>
		</div>
	</div>
<%= tabitem_end %>

<%= tabitem_plus(new_hardware_path, "New Hardware") %>
<%= tabitem_plus(new_inventory_path, "New Part") %>
<%= tabs_end %>