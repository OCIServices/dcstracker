<%= tabs_start('bugs') %>
<%= tabitem('bugs', 0, "Bug Reports", true)%>
<% headers = ['Bug ID', 'Name', 'Software Ver', 'Service', 'Date Opened', 'Status']%>
	<div class="List">
		<span class="Count"><%= @bugs.count %></span>
		<span class="Tablename">Bugs</span>
		<div class="ListContents">
			<table class="ListTable">
				<thead>
					<tr>
						<% headers.each do |h| %>
						<th class="ListHeader"><%= link_to h, sort: h %></th>
						<% end %>
					</tr>
				</thead>
				<tbody>
					<%= render @bugs %>
				</tbody>
			</table>
		</div>
	</div>
<%= tabitem_end %>
<%= tabitem_plus(new_bug_path, "Report Bug") %>
<%= tabs_end %>
