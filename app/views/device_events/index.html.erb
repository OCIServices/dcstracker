<% headers = ['', 'Ticket ID', 'Device ID', 'Customer Name', 'Date Opened', 'Category', 'Assigned To'] %>
<div class="List">
	<span class="Count"><%= @all_events.count %></span>
	<span class="Tablename">Device Event Log</span>
	<div class="ListContents">
		<table class="ListTable">
			<thead>
				<tr>
					<% headers.each do |h| %>
					<th class="ListHeader"><%= link_to h, sort: h %></th>
					<% end %>
				</tr>
			</thead>
			<tbody>
				<%= render @all_events %>
			</tbody>
		</table>
	</div>
</div>